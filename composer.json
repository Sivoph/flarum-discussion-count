{
    "name": "datlechin/flarum-discussion-count",
    "description": "Display discussion count against tags.",
    "keywords": [
        "flarum",
        "flarum extension",
        "discussion count",
        "tags"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2.0"
    },
    "authors": [
        {
            "name": "Ngo Quoc Dat",
            "email": "datlechin@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/datlechin/flarum-discussion-count",
        "forum": "https://discuss.flarum.org/d/31112"
    },
    "autoload": {
        "psr-4": {
            "Datlechin\\DiscussionCount\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Discussion Count",
            "category": "feature",
            "icon": {
                "name": "fas fa-comments",
                "color": "#fff",
                "backgroundColor": "#D3241C"
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": false,
                "forum": true,
                "js": true,
                "jsCommon": false,
                "css": false,
                "locale": false,
                "gitConf": true,
                "githubActions": true,
                "prettier": true,
                "typescript": false,
                "bundlewatch": false,
                "backendTesting": false,
                "editorConfig": true,
                "styleci": true
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
